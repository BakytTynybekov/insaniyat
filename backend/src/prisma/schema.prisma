generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id                 String               @id @default(uuid())
    email              String               @unique
    password           String
    name               String
    isAdmin            Boolean              @default(false)
    createdAt          DateTime             @default(now())
    PasswordResetToken PasswordResetToken[]
    donations          Donation[]
    subscriptions      Subscription[]
}

model Donation {
    id          String        @id @default(uuid())
    userId      String?
    email       String
    name        String
    amount      Float
    paymentType paymentType   @default(ONE_TIME)
    status      paymentStatus @default(LOADING)
    user        User?         @relation(fields: [userId], references: [id])
    createdAt   DateTime      @default(now())
}

model Subscription {
    id        String   @id @default(uuid())
    userId    String?
    email     String
    name      String
    amount    Float
    user      User?    @relation(fields: [userId], references: [id])
    createdAt DateTime @default(now())
}

model PasswordResetToken {
    id        String   @id @default(uuid())
    token     String   @unique
    userId    String
    user      User     @relation(fields: [userId], references: [id])
    expiresAt DateTime
    createdAt DateTime @default(now())
}

model Program {
    id          String       @id @default(uuid())
    title       String       @unique
    description String
    content     String
    image       String
    fundraisers FundRaiser[]
    createdAt   DateTime     @default(now())
    updatedAt   DateTime     @updatedAt
}

model FundRaiser {
    id           String     @id @default(uuid())
    title        String     @unique
    description  String
    text         String
    goal         String
    raised       Float
    status       StatusType @default(ACTIVE)
    image        String
    images       String[]
    programTitle String?
    program      Program?   @relation(fields: [programTitle], references: [title])
    createdAt    DateTime   @default(now())
    updatedAt    DateTime   @updatedAt
}

enum StatusType {
    ACTIVE
    COMPLETED
    SUCCESSFUL
}

enum DIRECTION {
    MEDICAL
    EDUCATION
    SOCIAL
}

enum paymentType {
    ONE_TIME
    MONTHLY
}

enum paymentStatus {
    LOADING
    ERROR
    SUCCESS
}
